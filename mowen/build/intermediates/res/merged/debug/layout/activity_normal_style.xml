<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white" >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/home_top_view"
                android:id="@+id/home_top_view" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_top_view"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp10"
                >
                <com.zxinsight.MWImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_1"
                    android:scaleType="fitXY"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/img_1"/>
                <com.zxinsight.MWImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_2"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/img_2"
                    android:scaleType="fitXY"
                    android:layout_above="@+id/img_3"
                    android:layout_alignLeft="@+id/img_3" />

                <com.zxinsight.MWImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_3"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/img_3"
                    android:layout_alignBottom="@+id/img_1"
                    android:layout_toRightOf="@+id/img_1" />

                <com.zxinsight.MWImageView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:id="@+id/bottom_img"
                    android:scaleType="fitXY"
                    android:background="@drawable/img_4"
                    android:layout_below="@+id/img_1"
                    android:layout_alignLeft="@+id/img_1"
                    android:layout_alignRight="@+id/img_3"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

