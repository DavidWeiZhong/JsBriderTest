<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/bg_white">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/dialog"
              android:textSize="20sp"
              android:textColor="@color/black"
              android:text="@string/custom_event_page"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/come_in_buy_page"
            android:text="@string/come_in_buy_page"
            android:textSize="20sp"
            android:textColor="@color/text_yellow"
            android:layout_below="@+id/dialog"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="50dp"
            android:id="@+id/click_to_buy"
            android:text="@string/click_to_buy"
            android:textSize="20sp"
            android:textColor="@color/text_yellow"
            android:layout_below="@+id/come_in_buy_page"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/buy_done"
            android:text="@string/buy_done"
            android:textSize="20sp"
            android:textColor="@color/text_yellow"
            android:layout_below="@+id/click_to_buy"/>


</RelativeLayout>